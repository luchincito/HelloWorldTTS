<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="1"
    >
    <LinearLayout android:background="#FFFFFF" android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:layout_width="match_parent" android:orientation="vertical" android:layout_gravity="center_horizontal">
        <TextView android:textColor="#000000" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Escolha o idioma do GPS" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></TextView>
    </LinearLayout>
 
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_gravity="center_horizontal" android:layout_width="wrap_content">
        <Button android:layout_gravity="center_horizontal" android:text="Ing - UK" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button1"></Button>
        <Button android:layout_gravity="center_horizontal" android:text="Ing - US" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button2"></Button>
        <Button android:layout_gravity="center_horizontal" android:text="Francês" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button3"></Button>
        <Button android:layout_gravity="center_horizontal" android:text="Alemão" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button4"></Button>
    </LinearLayout>
    <LinearLayout android:background="#FFFF00" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_width="wrap_content" android:layout_gravity="center_horizontal">
    </LinearLayout>
    <ImageView android:src="@drawable/labi9" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <Button android:layout_gravity="center_horizontal" android:text="Testar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button5"></Button>
	
</LinearLayout>
